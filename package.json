{
  "name": "hotel-booking-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "Fullstack Hotel/Pousada reservation system (API + Web)",
  "workspaces": [
    "apps/api",
    "apps/web"
  ],
  "scripts": {
    "dev": "concurrently -n api,web -c blue,magenta \"npm run -w apps/api dev\" \"npm run -w apps/web dev\"",
    "dev:api": "npm run -w apps/api dev",
    "dev:web": "npm run -w apps/web dev",
    "build": "npm run -w apps/api build && npm run -w apps/web build",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "format": "prettier --write .",
    "prepare": "husky install",
    "db:migrate": "npm run -w apps/api db:migrate",
    "db:seed": "npm run -w apps/api db:seed"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}